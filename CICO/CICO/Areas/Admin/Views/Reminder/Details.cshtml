@model Cico.Models.Reminder

@{
    ViewBag.Title = "Reminder Details";
}

<h2>Reminder Details</h2>

<fieldset>
    <legend>Reminder</legend>

    <div class="homescreen-label">Type</div>
    <div class="homescreen-display">
        @Html.DisplayFor(model => model.Checklisttype)
    </div>

    <div class="homescreen-label">Send Days</div>
    <div class="homescreen-display">
        @Html.DisplayFor(model => model.DateToSend)
    </div>
    
    <div class="homescreen-label">Subject</div>
    <div class="homescreen-display">
        @Html.DisplayFor(model => model.MessageSubject)
    </div>
    
    <div class="homescreen-label">Preface</div>
    <div class="homescreen-display">
        @Html.DisplayFor(model => model.MessagePreface)
    </div>
    
    <div class="homescreen-label">Closing</div>
    <div class="homescreen-display">
        @Html.DisplayFor(model => model.MessageClosing)
    </div>
    

</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
