@model IEnumerable<Cico.Models.CheckListTemplate>

@{
    ViewBag.Title = "Checklist Template Builder";
    
}

<h2>Check List  Builder</h2>

<table>
    <tr>
        <th>
            Revision Id
        </th>
        <th>
            Name
        </th>
        <th>Publish</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.CheckListTemplateId
            </td>
            <td>
                @Html.ActionLink(item.Name,"Edit",new {id=item.CheckListTemplateId})
                
            </td>
            <td>
                @if (!item.Published)
                {
                    <form action="/admin/checklistbuilder/publish"><button type="submit">Publish</button><input type="hidden" value="@item.CheckListTemplateId"/></form>
                }
            </td>
        </tr>
    }
         
    

</table>
