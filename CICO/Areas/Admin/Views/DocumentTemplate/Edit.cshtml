@using Cico.Models.Helpers
@model Cico.Models.DocumentTemplate

@{
    ViewBag.Title = "Edit Document Template";
}

<h2>Edit DocumentTemplate</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Reminder</legend>

        @Html.HiddenFor(model => model.Id)
        
        
        
       

        <div class="editor-label">
            @Html.LabelFor(model => model.DocumentTitle)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DocumentTitle)
            @Html.ValidationMessageFor(model => model.DocumentTitle)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Description)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Description)
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <p>
            <input type="submit" value="Submit" name="Save"/>
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
