    ViewBag.Title = "Home Page";
}
<style>
    .columnsContainer
    {
        position: relative;
        height: 400px
    }

    .leftColumn
    {
        width: 25%;
        float: left;
    }

    .rightColumn
    {
        float: right;
        width: 70%;
        margin-right: 4%;
        
    }

    .checklist{
        list-style: none;
        padding-left: 0px
        
    }
    .checkInItem {
        font-size: small;
        cursor: pointer;
    }

    .selected {
        font-weight:bold
            }

    .checkInItem .ico,.description,.checkbox {
        display: inline
    }

    .float-left {
    float: left;
}

.float-right {
    float: right;
}

</style>

<div class="columnsContainer">
    <div class="rightColumn">
        <div id="infoTabs">
            <ul>
                <li><a href="#myinfo">My Info</a></li>
                <li><a href="#mydependents">My dependents</a></li>
                <li><a href="#housingquestionare">My Housing Questionaire</a></li>
            </ul>
            <div id="myinfo">
                
            </div>
            <div id="mydependents">
                
            </div>
             <div id="housingquestionare">
                
            </div>
        </div>
    </div>
    <div class="leftColumn">
        <div id="checkInTabs">
            <ul>
                <li><a href="#checkIn">Check-In</a></li>
                <li><a href="#checkOut">Check-out</a></li>
                
            </ul>
            <div id="checkIn">
                <h4>Priority 1</h4>
                <ul data-bind="foreach: checklist " class="checklist" >
                    <li>
                        <div data-bind="css: { selected: selected }" class="checkInItem">
                            <div   class="ico ui-icon ui-icon-document">&nbsp; &nbsp;</div>
                            <div  class="checkbox"><input data-bind="checked: Checked" type="checkbox" /></div>
                            <div data-bind="text: Description, click:selectItem" class="description"></div>
                            <ul data-bind="foreach: menuItems,visible:selected">
                                <li>
                                    <div data-bind="text:Description"></div>
                                </li>
                            </ul>
                        </div>
                    </li>
                  
                </ul>
                <h4>Priority 2</h4>
                
            </div>
            
            <div id="checkOut">
                
            </div>
             
        </div>
        
    </div>
    <div style="clear:both"></div>
</div>
<script type="text/javascript">
$(function() {
    $("#infoTabs").tabs();
    $("#checkInTabs").tabs();
});

    function CheckBoxItem(checked,description,id,menuitems) {
        var self = this;
        self.selectItem = function (item) {
            if (item) {
                ko.utils.arrayForEach(homeModel.checklist(), function(ii) {
                    ii.selected(false);
                });
                item.selected(true);
            }
        };

        self.Id = id;
        self.Checked = ko.observable(checked);
        self.Description = ko.observable(description);
        self.menuItems = ko.observableArray(menuitems);
        self.selected = ko.observable(false);
        self.checkIn = function() {

        };
        self.Checked.subscribe(
            function(newValue) {
                $.post("/checklist/updateitem", self, function (data) {
                    
                });
            }
        );
    }

    function HomeViewModel() {
        var self = this;
        self.checklist = ko.observableArray();
        $.post("/checklist/getitems", {}, function (data) {
            ko.utils.arrayForEach(data, function (item) {
                self.checklist.push(new CheckBoxItem(item.Checked, item.Description, item.Id, item.MenuItems));
            });
        });
    }

    var homeModel = new HomeViewModel();
    ko.applyBindings(homeModel);
    

</script>

